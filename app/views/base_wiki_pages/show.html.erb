<%= content_for :breadcrumb do %>
  <%= print_breadcrumbs([
    ["Wiki", wiki_page_path],
    [@page.title, wiki_page_path(@page) ]
  ]).html_safe %>
<% end %>

<%= render partial: 'base_wiki_pages/all_pages_action' %>
<h1><%=h @page.title %></h1>

<%=wiki_content @page.content %>

<hr />
<div class="row-fluid">
  <div class="span6">
    <%= wiki_page_info %>
  </div>
  <div class="span6 text-right">
    <%= wiki_page_actions %>
  </div>
</div>

