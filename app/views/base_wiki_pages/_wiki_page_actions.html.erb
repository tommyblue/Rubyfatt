<ul class="wiki_page_actions">
  <%= content_tag('li', link_to( wt( 'History' ), wiki_page_history_path(@page), class: 'btn btn-mini btn-primary' )) if history_allowed? %>
  <%= content_tag('li', link_to( wt( 'Edit' ), wiki_page_edit_path(@page), class: 'btn btn-mini btn-primary' )) if edit_allowed? %>
  <%= content_tag('li', link_to( wt( 'Destroy' ), wiki_page_path(@page), class: 'btn btn-mini btn-danger', method: :delete, data: { confirm: t( 'wiki.destroy_page_confirm', default: "Destroyed page can't be restored. Are you sure?" ) } )) if destroy_allowed? %>
</ul>
