<%= form_tag "/invoice/#{@invoice.id}/payment", :class => 'form-horizontal' do %>
  <legend><%=t '.legend', :default => 'Add payment to invoice #' %> <%= @invoice.number %> (<%= @invoice.customer.title %>)</legend>
  <div class="control-group string optional">
    <label class="string optional control-label" for="invoice_name"><%=t 'simple_form.labels.payment.date', :default => "Date" %></label>
    <div class="controls">
      <div class="input-prepend">
        <span class="add-on"><i class="icon-calendar"></i></span><input id="payment" class="input-small datepicker string" type="text" value="" size="30" name="payment">
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= submit_tag t('helpers.submit.payment.create', :default => "Add payment"), :class => 'btn btn-primary' %>
  </div>
<% end %>
